{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "node_module/phaser/types", "./src/server/game/scenes/types/"],
    "types": ["phaser"],
    "allowJs": false,
    "outDir": "../../build/server",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
